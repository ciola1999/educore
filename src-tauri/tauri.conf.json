{
	"$schema": "../node_modules/@tauri-apps/cli/config.schema.json",
	"productName": "educore",
	"version": "0.1.0",
	"identifier": "com.educore.system",
	"build": {
		"frontendDist": "../out",
		"devUrl": "http://localhost:3000",
		"beforeDevCommand": "bun run dev",
		"beforeBuildCommand": "bun run build"
	},
	"app": {
		"windows": [
			{
				"title": "Educore System",
				"width": 1280,
				"height": 800,
				"resizable": true,
				"fullscreen": false,
				"decorations": true
			}
		],
		"security": {
			"csp": "default-src 'self' 'unsafe-inline' 'unsafe-eval' blob: data:; img-src 'self' blob: data: https:; connect-src 'self' https: ws:;"
		}
	},
	"bundle": {
		"active": true,
		"targets": "all",
		"icon": [
			"icons/32x32.png",
			"icons/128x128.png",
			"icons/128x128@2x.png",
			"icons/icon.icns",
			"icons/icon.ico"
		]
	},
	"plugins": {
		"sql": {
			"preload": ["sqlite:educore.db"]
		}
	}
}
